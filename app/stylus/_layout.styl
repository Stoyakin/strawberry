*
  box-sizing border-box

img
  max-width 100%

a
  text-decoration none

html
  font-size $baseFontSize

html, body, .wrapper
  position relative
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  text-rendering optimizeLegibility !important

body
  position relative
  min-width 375px
  margin 0
  padding 0
  font-family $baseFontFamily
  font-weight $baseFontWeight
  box-sizing border-box
  overflow-x hidden

  &.blocked, &.open-menu
    overflow hidden
    -ms-touch-action none
    touch-action none

  .header, .footer, .main
    opacity 0
    transition .5s

  &.pace-done
    .header, .footer, .main
      opacity 1

      .pace
        display none

    .decor__item
      transform scale(1)
      opacity 1

      @media $desktopMax
        transform scale(.7)

.wrapper
  position relative
  overflow-x hidden

  &--inside
    padding-top 176px

    @media $desktopMax
      padding-top 102px

    .header
      background-color #F3F8FF
      padding-bottom 71px

      @media $desktopMax
        padding-bottom 60px

      &:after
        content ''
        position absolute
        display block
        left 0
        bottom 0
        width 100%
        height 31px
        background url('../../../../static/img/wave3.png') no-repeat center

    .main
      padding 79px 0 149px

      @media $tLandscapeMax
        padding-bottom 100px

      @media $mLandscapeMax
        padding-bottom 70px
