.contacts
  position relative
  margin-top 44px

  @media $tPortraitMax
    display flex
    flex-direction column

  &__info
    position absolute
    display flex
    flex-direction column
    justify-content center
    right 133px
    top 47px
    width 100%
    max-width 443px
    min-height 483px
    background url('../../../../static/img/contacts-decor.png') no-repeat center
    background-size contain
    padding 33px 70px 60px 133px
    z-index 2

    @media $desktopMax
      max-width 360px
      min-height 390px
      right 110px
      top 42px
      padding 46px 60px 60px 106px

    @media $tPortraitMax
      position relative
      right auto
      top auto
      margin -65px auto 0
      order 2

    &-item
      position relative
      margin-bottom 35px

      @media $desktopMax
        margin-bottom 32px

      &:before
        background-repeat no-repeat
        background-size cover
        background-position center

      &:last-child
        margin-bottom 0

      &--address
        &:before
          content ''
          display block
          position absolute
          left -40px
          top 20px
          width 16px
          height 25px
          background-image url('../../../../static/img/svg/strawberry.svg')

          @media $desktopMax
            left -32px
            top 17px
            width 13px
            height 19px

      &--phone
        &:before
          content ''
          display block
          position absolute
          left -40px
          top 21px
          width 23px
          height 24px
          background-image url('../../../../static/img/svg/icon.svg')

          @media $desktopMax
            left -32px
            top 17px
            width 18px
            height 18px

      //&--social

      &-title
        color rgba(#333, .35)
        font-size 14px
        font-weight 700
        text-transform uppercase
        margin-bottom 10px
        letter-spacing 0.02em

        @media $desktopMax
          font-size 12px
          margin-bottom 7px

      &-data
        position relative
        color #333
        font-family Fregat
        font-size 20px
        font-weight 400
        line-height 22px

        @media $desktopMax
          font-size 16px
          line-height 18px

        address
          letter-spacing 0.05em
          display block

        a[href*=tel]
          color #333
          font-family Fregat
          font-size 22px
          font-weight 700
          text-transform uppercase
          letter-spacing 0.012em

          @media $desktopMax
            font-size 18px

        .social
          margin 0 0 0 -10px

  &__map
    position relative
    width 100%
    height 548px

    @media $desktopMax
      height 446px

    @media $tPortraitMax
      order 1
      height 300px

    &:before
      @extend .before
      left 0
      top 0
      width 100%
      height 100%
      background url('../../../../static/img/border-map.png') no-repeat center
      background-size 100% 100%
      pointer-events none
      z-index 1

    &:after
      @extend .after
      left -3px
      top -3px
      width calc(100% - 2px)
      height calc(100% - 2px)
      border 4px solid #fff
      pointer-events none
      z-index 2

