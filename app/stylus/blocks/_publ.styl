.publ
  position relative
  margin-top -25px
  padding-top 145px

  @media $desktopMax
    padding-top 125px

  @media $tLandscapeMax
    padding-top 75px

  &__date
    display block
    position absolute
    left 0
    top 36px
    width 90px
    height 90px
    border-radius 50%
    background-color #1e7b35
    flex-shrink 0
    color white
    font-family Fregat
    font-size 16px
    line-height 17px
    font-weight 700
    padding 28px 16px
    text-align center
    margin 0
    word-break break-word
    z-index 2

    @media $desktopMax
      top 29px
      width 70px
      height 70px
      font-size 14px
      line-height 17px
      padding 20px 11px

    @media $tLandscapeMax
      top 0
      width 50px
      height 50px
      font-size 11px
      line-height 13px
      padding 13px 11px

    span
      display block

  .text
    & > figure:first-child
      margin-top -145px !important

      @media $desktopMax
        margin-top -125px !important

      @media $tLandscapeMax
        margin-top -60px !important
