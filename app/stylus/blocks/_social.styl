.social
  display inline-flex

  @media $mLandscapeMax
    margin-right -10px

  &__item
    margin 0 10px

    &-href
      display block
      position relative
      width 44px
      height 44px
      z-index 1

      @media $desktopMax
        width 40px
        height 40px

      &:before, &:after
        content ''
        position absolute
        display block

      &:before
        left 50%
        top 50%
        transform translate(-50%, -50%) scale(1)
        border-radius 50%
        background-color #e1150a
        z-index -1
        width 44px
        height 44px
        transition transform .4s

        @media $desktopMax
          width 40px
          height 40px

      &:after
        @extend .centerPos
        background-repeat no-repeat
        background-position center
        z-index 1

      &:hover
        &:before
          transform translate(-50%, -50%) scale(1.1)

      &--vk
        &:after
          width 18px
          height 10px
          background-image url('data:image/png;base64,')

      &--inst
        &:after
          width 16px
          height 16px
          background-image url('data:image/png;base64,')
