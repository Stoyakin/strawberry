.feedback
  margin-top 113px

  @media $desktopMax
    margin-top 91px

  @media $desktopMax
    margin-top 50px

  &.start-animate
    .feedback__item
      opacity 1
      top 0

      &:nth-child(2)
        transition-delay .3s

        &:before
          transition-delay .3s

      &:nth-child(3)
        transition-delay .6s

        &:before
          transition-delay .6s

      &:before
        transition transform .6s
        transform translate(-50%, -50%) scale(1)

      &:hover
        &:before
          transition transform .4s
          transform translate(-50%, -50%) scale(1.1)

  &__row
    display flex
    justify-content space-between
    margin 0 -70px
    width calc(100% + 140px)

    @media $desktopMax
      margin 0 -58px
      width calc(100% + 116px)

    @media $mLandscapeMax
      margin 0 -10px
      width calc(100% + 20px)

    @media $mPortraitMax
      margin 0
      width 100%
      flex-direction column
      justify-content center

  &__item
    display flex
    flex-direction column
    justify-content center
    align-items center
    position relative
    width 218px
    height 218px
    margin 0 70px
    border-radius 50%
    padding-top 11px
    z-index 1
    opacity 0
    top 70px
    transition opacity .5s, top .5s

    @media $desktopMax
      width 174px
      height 174px
      margin 0 58px

    @media $mLandscapeMax
      margin 0 10px

    @media $mPortraitMax
      align-items center
      margin 0 auto 40px
      width 218px
      height 218px

      &:last-child
        margin-bottom 0

    &:hover
      &:before
        transform translate(-50%, -50%) scale(1.1)

    &:before
      @extend .before
      left 50%
      top 50%
      transform translate(-50%, -50%) scale(1)
      width 100%
      padding-top 100%
      background-color #f3f8ff
      border-radius 50%
      transition transform .4s
      z-index -1

    &-title
      color #5f5f5f
      font-size 16px
      font-weight 400
      line-height 22px

      @media $desktopMax
        font-size 14px
        line-height 16px

      @media $mPortraitMax
        font-size 16px
        line-height 22px

    &-data
      color #333
      font-size 20px
      font-weight 700
      line-height 24px

      @media $desktopMax
        font-size 16px
        line-height 22px

      @media $mLandscapeMax
        line-height 18px

      @media $mPortraitMax
        font-size 20px
        line-height 24px

      a
        color #333
        font-size 20px
        font-weight 700
        line-height 24px

        @media $desktopMax
          font-size 16px
          line-height 22px

        @media $mLandscapeMax
          font-size 14px
          line-height 16px

        @media $mPortraitMax
          font-size 20px
          line-height 24px
