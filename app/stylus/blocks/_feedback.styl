.feedback
  margin-top 113px

  &__row
    display flex
    justify-content space-between
    margin 0 -70px
    width cacl(100% + 140px)

  &__item
    display flex
    flex-direction column
    justify-content center
    align-items center
    position relative
    width 218px
    height 218px
    margin 0 70px
    border-radius 50%
    padding-top 11px
    z-index 1

    &:hover
      &:before
        transform translate(-50%, -50%) scale(1.1)

    &:before
      @extend .before
      left 50%
      top 50%
      transform translate(-50%, -50%) scale(1)
      width 100%
      padding-top 100%
      background-color #f3f8ff
      border-radius 50%
      transition transform .4s
      z-index -1

    &-title
      color #5f5f5f
      font-size 16px
      font-weight 400
      line-height 22px

    &-data
      color #333
      font-size 20px
      font-weight 700
      line-height 24px

      a
        color #333
        font-size 20px
        font-weight 700
        line-height 24px
