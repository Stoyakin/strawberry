.footer
  position relative
  padding 100px 0 60px
  background-color #f7f7f7
  z-index 2

  @media $desktopMax
    padding 61px 0 60px

  @media $mLandscapeMax
    padding-bottom 40px

  &:before
    @extend .before
    left 0
    top 0
    width 100%
    height 30px
    background url('../../../../static/img/wave2.png') no-repeat center
    background-size cover
    z-index -1

  &__row
    display flex
    flex-wrap wrap
    justify-content space-between
    align-items center
    margin-bottom 33px

    @media $desktopMax
      margin-bottom 23px

    &:last-child
      margin-bottom 0

    &--bottom
      .footer__row-right
        @media $mLandscapeMax
          width 100%
          margin-top 30px
          text-align center

    &-left, &-right
      width 215px
      flex-shrink 0

      @media $mLandscapeMax
        width 50%
        flex-shrink 1

    &-right
      text-align right

  &__logo
    display inline-block
    vertical-align top
    max-width 168px
    transition opacity .4s

    &:hover
      opacity .7

    @media $desktopMax
      max-width 140px

  &__phone
    display inline-block
    vertical-align top
    position relative
    color #333
    font-family Fregat
    font-size 22px
    line-height 26px
    font-weight 700
    text-transform uppercase
    margin-top 17px
    letter-spacing 0.01em
    transition opacity .4s

    &:hover
      opacity .7

    @media $desktopMax
      font-size 18px
      line-height 22px

    @media $mPortraitMax
      font-size 16px
      line-height 20px
      margin-top 10px

    &:before
      @extend .before
      left -30px
      top 0
      width 23px
      height 24px
      background url('../../../../static/img/svg/icon.svg') no-repeat center
      background-size contain

      @media $desktopMax
        width 17px
        height 18px
        left -22px
        top 3px

      @media $mPortraitMax
        width: 13px;
        height: 14px;
        left: -17px;
        top: 2px;


  &__coopy
    color rgba(#333, .86)
    font-size 15px
    font-weight 400
    line-height 24px

    @media $desktopMax
      font-size 14px
      line-height 20px

  &__dev
    display inline-flex
    vertical-align top
    align-items flex-start
    text-align left
    color #bbb
    font-family Arial
    font-size 10px
    line-height 12px
    font-weight 400
    text-transform uppercase
    letter-spacing 0.06em
    margin-top 3px
    transition opacity .4s

    &:hover
      opacity .7

    @media $desktopMax
      font-size 9px
      line-height 11px

    span
      display inline-block
      vertical-align middle
      color #fff
      font-family Arial
      font-size 14px
      line-height 16px
      font-weight 700
      text-transform uppercase
      margin-right 11px
      padding 4px 5px 3px
      background-color #dd260e
      letter-spacing .1em

      @media $desktopMax
        font-size 12px
        line-height 14px
