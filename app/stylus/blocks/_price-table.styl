.price-table
  margin-bottom 114px

  @media $desktopMax
    margin-bottom 95px

  &__top
    position relative
    border-radius 38px
    background-color #f3f8ff
    border-radius 38px
    padding 32px 100px 25px 30px
    z-index 2
    margin-bottom -35px

    @media $desktopMax
      padding 25px 80px 17px 30px

  &__btn-toggle
    display block
    position absolute
    right 5px
    top 5px
    width 64px
    height 64px
    background #e1150a
    border none
    user-select none
    outline none
    border-radius 50%
    padding 0
    z-index 1

    @media $desktopMax
      width 50px
      height 50px

    &:before, &:after
      content ''
      position absolute
      display block
      width 10px
      height 2px
      background-color white
      left 27px
      top 31px

      @media $desktopMax
        left 22px
        top 25px

    &:after
      transform rotate(-90deg)
      transition transform .4s

    &--active
      &:after
        transform rotate(0)

  &__title
    color #333
    font-size 14px
    line-height 18px
    font-weight 700
    text-transform uppercase
    letter-spacing 0.01em

  &__content
    position relative
    background-color white
    border 2px solid #f3f8ff
    border-top none
    border-bottom-left-radius 38px
    border-bottom-right-radius 38px
    z-index 1

    .text
      width 100%

      table
        tr
          &:first-child
            td
              padding-top 57px

          &:last-child
            td
              border-bottom none
