.header
  position absolute
  left 0
  top 0
  width 100%
  z-index 10
  padding-top 34px

  @media $desktopMax
    padding-top 26px

  @media $tLandscapeMax
    .nav
      &__list
        display none
        position fixed
        left 0
        top 0
        width 100%
        height 100%
        flex-direction column
        margin 0
        background-color #f3f8ff
        padding 80px 20px 40px
        text-align center
        z-index 9

        &-item
          margin-right 0
          margin-bottom 30px

          &:last-child
            margin-bottom 0

        &-href
          font-size 18px
          line-height 24px

  @media $tPortraitMax
    padding-top 20px

  &__row
    display flex
    justify-content space-between
    align-items center
    position relative

    @media $tLandscapeMax
      padding-right 90px

    @media $tPortraitMax
      padding-right 64px

  &__logo
    display inline-flex
    align-items flex-end
    margin-right auto
    transition opacity .4s

    &:hover
      opacity .7

    &-overimg
      position relative
      width 173px
      font-size 0
      margin-right 28px
      flex-shrink 0

      @media $desktopMax
        margin-right 22px
        width 140px

    &-img
      max-width 100%

    &-title
      display inline-block
      vertical-align top
      color rgba(#333, .8)
      font-family Fregat
      font-size 14px
      font-weight 400
      line-height 20px
      margin-bottom 5px
      max-width 165px

      @media $desktopMax
        font-size 13px
        line-height 18px
        max-width 150px
        margin-bottom 3px
        letter-spacing 0.05em

      @media $mLandscapeMax
        display none

  &__address
    display inline-block
    vertical-align top
    position relative
    padding-left 39px
    margin-left auto
    color rgba(#333, .3)
    font-family Fregat
    font-size 14px
    line-height 16px
    font-weight 700
    text-transform uppercase
    width 230px
    margin-top 24px
    letter-spacing 0.05em

    @media $desktopMax
      font-size 11px
      line-height 13px
      width 187px
      padding-left 32px
      margin-top 19px

    @media $mPortraitMax
      display none

    &:before
      @extend .before
      left 4px
      top  5px
      width 16px
      height 25px
      background url('../../../../static/img/svg/strawberry.svg') no-repeat center
      background-size cover

      @media $desktopMax
        width 13px
        height 20px

    span
      display block
      color #333
      font-weight 400
      text-transform none
      margin-top 4px

      @media $desktopMax
        font-size 13px
        line-height 15px
        margin-top 3px

