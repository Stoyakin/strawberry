.services
  &--offer
    margin 63px 0 0

  &--weekdays
    margin 63px 0 114px

  .container
    padding 0 117px

  &__row
    display flex
    flex-wrap wrap
    align-items flex-start
    justify-content center
    //margin 0 -40px 65px
    margin 0 -40px 0

  &__item
    position relative
    width calc(100%/3 - 80px)
    margin 0 40px
    background-color #f3f8ff
    border-top-left-radius 40px
    border-top-right-radius 40px
    border-bottom-left-radius 169px
    border-bottom-right-radius 169px
    padding 36px 35px
    z-index 1

    &--vert-mirror
      border-top-left-radius 169px
      border-top-right-radius 169px
      border-bottom-left-radius 40px
      border-bottom-right-radius 40px
      padding-bottom 31px

    &-overimg
      width 100%
      height 130px
      display flex
      justify-content center
      align-items flex-end
      margin-bottom 25px

    &-img
      max-width 100%
      max-height 100%

    //&-info
    &-title
      position relative
      font-size 24px
      line-height 30px
      padding-bottom 17px
      text-align center
      color #333
      font-weight 700
      text-transform uppercase
      text-align center

      &:before
        @extend .before
        left 50%
        transform translateX(-50%)
        bottom 0
        width 30px
        height 4px
        background url('../../../../static/img/svg/flood.svg') no-repeat center
        background-size contain

      @media $desktopMax
        font-size 24px
        line-height 30px
        margin 88px 0 46px

    &-data
      text-align left
      color #5f5f5f
      font-size 15px
      font-weight 400
      line-height 24px
      margin-top 35px

      .text ul
        margin-left 0

        li + li
          margin-top 23px

    &-course
      margin-top 28px
      font-size 16px
      font-weight 700
      line-height 26px
      color #5f5f5f
      letter-spacing 0.03em

      time
        display block
        color #1e7b35

    &-price
      display flex
      flex-direction column
      justify-content center
      align-items center
      width 161px
      height 161px
      border-radius 82px
      text-align center
      color white
      font-family Fregat
      line-height 24px
      font-weight 700
      font-size 22px
      margin 44px auto -110px

      &--yellow
        background-color #edba09

      &--green
        background-color #1e7b35

      &--red
        background-color #e1150a

      &-old
        color #a9c4ae
        font-weight 700
        font-size 20px
        text-decoration line-through
        span
          font-size 16px

      &-number
        span
          font-size 18px

        .warn
          display block
          font-weight 400
          color white
          font-size 15px
          line-height 15px

  &__sale
    display inline-block
    vertical-align top
    position relative
    left 50%
    transform translate(-50%)
    color white
    font-family Fregat
    font-size 20px
    font-weight 700
    margin-top 170px
    margin-bottom 35px
    z-index 1

    &-text
      background url('../../../../static/img/sale-back.png') no-repeat center
      background-size 100% 100%
      padding 43px 36px 40px
      letter-spacing 0.027em

    &-decor
      position absolute
      left 50%
      top -91px
      transform translateX(-50%)
      width 144px
      height 228px
      background url('../../../../static/img/big-decor.png') no-repeat center
      z-index -1

  &__warning
    display flex
    align-items center
    margin-top 51px
    background-color #f3f8ff
    border-radius 40px
    padding 40px 52px

    &--sert
      margin-top 125px
      margin-bottom 121px
      padding 48px 52px

    &-overico
      flex-shrink 0
      margin-right 39px

  &__conducts
    margin-top 64px
    margin-bottom 140px

    &-title
      position relative
      font-size 24px
      line-height 30px
      padding-bottom 15px
      text-align center
      color #333
      font-weight 700
      text-transform uppercase
      text-align center
      margin-bottom 9px

      &:before
        @extend .before
        left 50%
        transform translateX(-50%)
        bottom 0
        width 40px
        height 4px
        background url('../../../../static/img/svg/flood.svg') no-repeat center
        background-size cover

      @media $desktopMax
        font-size 24px
        line-height 30px
        margin 88px 0 46px

    &-row
      display flex
      flex-wrap wrap
      align-items flex-start
      justify-content space-between

    &-overimg, &-info
      width calc(50% - 15px)

    &-overimg
      position relative
      overflow hidden
      z-index 1

      &:before
        @extend .before
        left 0
        top 0
        width 100%
        height 101%
        background url('../../../../static/img/border-img.png') no-repeat center
        background-size 100% 100%
        z-index 2

    &-img
      max-width 100%
      max-height 100%

    &-info
      margin-top 28px

      .text > ul
        margin-left 0

